 <div class= "card">
      <div class="card-body">
    {{#with heading.main}}
   <h1>{{title}}</h1>
   <br>
   <p>{{text}}</p>
   <br>
   {{#with button_text}}
         <button class="btn btn-primary">
       <div> <span class="text-muted">{{solid}}</span></div>
        
       <div><button class="btn btn-outline-primary">{{outline}}</button></div>
  </button>
      {{/with}}
      {{/with}}  
     </div>   
  </div>


    <div class= "card">
      <div class="card-body">
    {{#with heading.second}}
   <h2>{{title}}</h2>
   <br>
   <p>{{text}}</p>
   <br>
   {{#with button_text}}
         <button class="btn btn-secondary">
       <div> <span class="text-muted">{{solid}}</span></div>
        
       <div><button class="btn btn-outline-secondary">{{outline}}</button></div>
  </button>
      {{/with}}
      {{/with}}  
     </div>   
  </div>


  <div class= "card">
      <div class="card-body">
    {{#with heading.subblock}}
   <h3>{{title}}</h3>
   <br>
   <p>{{text}}</p>
   <br>
   {{#with button_text}}
         <button class="btn btn-dark">
       <div> <span class="text-muted">{{solid}}</span></div>
        
       <div><button class="btn btn-outline-dark">{{outline}}</button></div>
  </button>
      {{/with}}
      {{/with}}  
     </div>   
  </div>
    
 
 <div class= "card">
      <div class="card-body">
    {{#with  nested_display}}
        <div class="display-1 text-muted">{{title}}</div>
      <br>
   {{#with  children_display}}
        <div class="display-4 text-muted">{{title}}</div>
        <p>{{text}}</p>
        <br>
        {{#with button}}
        <button class="btn btn-outline-warning btn-sm">{{text}}</button>
        {{/with}}
      {{/with}}
       
     </div>   
  </div>
     <hr>
     <h6>{{header_text}}</h6>
     <br>
     {{#with button}}
      <button class="btn btn-info">{{text}}</button>  
{{/with}} 
 {{/with}}  
<br>
<br>

 <div class= "card">
      <div class="card-body">
    {{#with paragraph}}
        <span class="text-uppercase">{{title}}</span>
      <br>
      <span class="text-lowercase">{{text}}</span>
   <br>
   <br>
   {{#with button}}
       <a href="{{url}}" class="btn btn-primary">{{text}}</a>
     {{/with}}

     <div class= "card">
      <div class="card-body">
     {{#each list_name}}
      <h5>{{text}}</h5>  
             <a href="#" class="btn btn-primary">{{url}}</a>
                
         
      {{/each}}
       {{/with}}
      </div> 
      </div>  
     </div>   
  </div>  
           
      


 
   
               
      
       
            
            
                
                  
                                      
                                              
                                          
                     
                 
                           
                           
            
                     
                      
                                                             
                      
    
                
                
               
    
    
      
                    
           
   
   
    

