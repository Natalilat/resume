{{!-- 
  Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
  І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

  <head>
    <title>
      {{page.title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>

  <body>
    {{#with header}}
     <header>
        <div>
            <h1>{{name.firstname}} {{name.lastname}}</h1> 
        </div>
        <div>
            <b>{{position}}</b>
        </div>
        <br>
        <div>
            <em>
              <b>{{salary}}</b>
                </em>
        </div>
        <hr>
         <br>
        <div>
             <address>{{address}}</address> 
        </div>
        <br>
        <hr>                   
        </header>
    {{/with}}
     <nav>
            {{> link text="Summary" href="/summary" line=true }}
            {{> link text="Skills" href="/skills" line=true }}
            {{> link text="Education" href="/education" line=true }}
            {{> link text="Work" href="/work" line=true }}
            {{> link text="Person" href="/person" line=true noLine=true}}
    </nav>
          
     
    {{!  ↓  ця кострукція показує куди шаблонізатору треба вставляти код з container файлу   --}}
    {{{body}}}
    <br>
    <hr>
       
    {{> footer social=footer.social firstname=header.name.firstname lastname=header.name.lastname address=header.address}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>